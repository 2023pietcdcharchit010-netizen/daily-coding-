// reverse the array by swapping   METHOD 1 BY SWAPPING ELEMNTS
#include <iostream>
using namespace std;
int main()
{
    int arr[5]={1,2,3,4,5};
    int start=0,end=4;
    while(start<end){
        swap(arr[start],arr[end]);
        start++;
        end--;
    }
    for ( int i = 0; i < 5 ; i++)
    {
        cout<<arr[i]<<" ";
    }
    
return 0;
}




// METHOD 2  BY TAKING A ANOTHEER ARRAY 
#include <iostream>
using namespace std;
int main()
{
    int arr[6] = {6, 11, 7, 4, 8, 9};
    int temp[6];
    int i = 5, j = 0;
    while (i >= 0)
    {
        temp[j] = arr[i];
        j++;
        i--;
    }
    // print reversed array
    for (int k = 0; k < 6; k++)
    {
        cout << temp[k] << " ";
    }
    return 0;
}
