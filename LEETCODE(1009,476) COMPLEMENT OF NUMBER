class Solution {
public:
    int bitwiseComplement(int n) {
        if (n==0)
        return 1;        
        int mul=1,ans=0;
        while(n){
            int bit=n%2;
            int flip=bit^1;
            n=n/2;
            ans=ans+flip*mul;
            mul=mul*2;
        }
        return ans;

    }
};
